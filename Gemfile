  gem "rspec-core",         :git => "http://github.com/rspec/rspec-core.git"
  gem "rspec-expectations", :git => "http://github.com/rspec/rspec-expectations.git"
  gem "rspec-mocks",        :git => "http://github.com/rspec/rspec-mocks.git"
end
